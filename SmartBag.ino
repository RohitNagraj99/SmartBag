/////////////////////////////////////////////////////////////    BOOKCHECK FUNCTION   //////////////////////////////////////////////////////////////////////////////////////////////////////
void bookCheck()
{
  char Book1[] ="$0003935043";
  int flag=1;
  int count=0;

  while(count<11 && flag!=-1)
  {
    if(Book[count]==Book1[count])
    {
      flag=1;
    }
    else
    {
      flag=-1;
    }
    count++;
  }
  result=flag;
}
