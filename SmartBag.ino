////////////////////////////////////////////////////////////    LOOP FUNCTION    ////////////////////////////////////////////////////////////////////////////////
void loop()
{
  result=0;
  readBook();
  if (result == 1)
  {
    correct();
  }
  else if (result == -1)
  {
    wrong();
  }
  
}

////////////////////////////////////////////////////////////    READBOOK FUNCTION   ///////////////////////////////////////////////////////////////////////////////////////////////////////
void readBook()
{
  int count=0;
  strcpy(Book,"");

  if(Serial.available())
  {
    count=0;

    while(Serial.available() && count<11)
    {
      Book[count] = Serial.read();
      count++;
